[alias]
	br = branch
	cl = clone
	cm = commit
	cmm = commit -m
	cma = commit --amend
	co = checkout
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	ds = diff --staged
	lol = log --graph --decorate --oneline
	lola = log --graph --decorate --oneline --all
	pfwl = push --force-with-lease
	pom = pull origin main
	rb = rebase
	rbc = rebase --continue
	rom = rebase origin/main --interactive
	st = status
	ap = add -p

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX # need to install diff-so-fancy

[color]
	ui = auto
	branch = auto
	interactive = auto
	status = auto

[commit]
	verbose = true

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[merge]
	tool = vimdiff
	prompt = false

[pull]
	rebase = true

[push]
	default = upstream

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

